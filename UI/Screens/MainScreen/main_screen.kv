#:kivy 1.0.9
#:include UI/Screens/ImageAnalysisScreen/image_analysis_screen.kv
#:include UI/Screens/SongAnalysisScreen/song_analysis_screen.kv
#:include UI/Screens/RecommenderScreen/recommender_screen.kv

WindowManager:
    MainScreen:
    RecommenderScreen:
    ImageAnalysisScreen:
    SongAnalysisScreen:

<MainScreen>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        Button:
            text: "Song Recommender"
            font_size: 32
            background_color: [1, 1, 0.5, 1]
            on_release:
                app.root.current = "recommender"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Image Analysis"
            font_size: 32
            on_release:
                app.root.current = "image_analysis"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Song Analysis"
            font_size: 32
            on_release:
                root.analyse_songs()