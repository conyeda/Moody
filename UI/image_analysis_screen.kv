#:kivy 1.0.9
#:include UI/load_dialog_widget.kv

<ImageAnalysisWindow>:
    name: "image_analysis"
    image_path_label: image_path_label
    mood_label: mood_label
    image_view: image_view

    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        background_color: [1, 1, 1, 1]

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.25

            Button:
                text: "Select image"
                font_size: 24
                #pos_hint: {"center_x": 0.5}
                on_release:
                    root.show_load()
            
            Button:
                text: "Analyse"
                font_size: 24
                background_color: [0, 1, 0, 1]
                on_release:
                    root.analyse()

        Label:
            id: mood_label
            text: mood_label.text
            color: [0, 0, 0, 1]
            size_hint: 1, 0.25

        Image:
            id: image_view
            source: image_view.source
            allow_stretch: True
            keep_ratio: True

        Label:
            id: image_path_label
            text: image_path_label.text
            color: [0, 0, 0, 1]
            size_hint: 1, 0.25

        Button:
            text: "Back"
            font_size: 24
            size_hint: 1, 0.25
            #pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"